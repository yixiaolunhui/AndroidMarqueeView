<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="marqueebackground" format="color"/>

    <declare-styleable name="MarqueeView">
        <attr name="textcolor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="isRepeat" format="boolean" />
        <attr name="speed" format="integer"/>
        <attr name="startPoint" format="integer">
            <enum name="start" value="0"/>
            <enum name="end" value="1"/>
        </attr>
        <attr name="direction" format="integer">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="marqueebackground"/>
    </declare-styleable>
    <declare-styleable name="HorizontaMarqueeView">
        <attr name="color" format="color" />
        <attr name="size" format="integer" />
        <attr name="anim_up" format="boolean" />
        <attr name="anim_down" format="boolean" />
        <attr name="anim_left" format="boolean" />
        <attr name="anim_right" format="boolean" />
        <attr name="anim_duration_second" format="integer" />
        <attr name="desc" format="string" />
        <attr name="marqueebackground"/>
        <attr name="text_background" format="color"/>

    </declare-styleable>
    <style name="def_horizonta_marquee_view_layout">
        <item name="color">#ffffff</item>
        <item name="size">16</item>
        <item name="anim_up">false</item>
        <item name="anim_down">false</item>
        <item name="anim_left">false</item>
        <item name="anim_right">false</item>
        <item name="anim_duration_second">10</item>
        <item name="marqueebackground">#00000000</item>
        <item name="text_background">#00ff0000</item>
        <item name="desc">滚动吧~~我的滚动条\n~~翻腾吧~~我曹</item>
    </style>
</resources>